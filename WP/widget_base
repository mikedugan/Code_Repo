class Widget_Name extends WP_Widget {
	function Widget_Name() {
		//pulls in variables from the theme
		extract( $args, EXTR_SKIP );

		//sets the title of the widget
		$title = ( $instance['title'] ) ? $instance['title'] : 'TitleGoesHere';

		//sets some arbitrary data in an array
		$widget_data = array(1, 2, 3, 4, 5);

		//prints out the variables
		echo $before_widget;
		echo $before_title;
			echo esc_html( $instance['title']);
		echo $after_title;
		//prints out a random member of the array
		echo $widget_data[array_rand($widget_data)];
		echo $after_widget;
	}

	function widget() {
		$widget_options = array(
			'classname'	=>	'widget',
			'description' => __('MyWidgetTitle'));

		$control_options = array(
			'height' => 300,
			'width' => 200 );

		$this->WP_Widget('widget'), __('MyWidgetTitle'), $widget_options, $control_options );
	}

	function form($instance) {
		?>
		<p>
			<label for="<?php echo $this->get_field_id('title'); ?>">
			<php _e('Title:'); ?>
			<input id="<?php echo $this->get_field_id('title'); ?>" type="text" value="<?php echo esc_attr( $instance['title']); ?>" />
			</label>
		</p>
		<?php
	}

	function update($new_instance, $old_instance) {
		$instance = $old_instance;
		$instance['title'] = sanitize_title($new_instance['title'] );
		return $instance;
	}

}